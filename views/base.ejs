
<%- include("header") -%>

   


    <div class="text-center center-div" id="login">

        <div class="container w-25 border py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold text-light">Login Page</h2>

                <span class="text-light">Login in for the existing user</span>
                
                <% if(locals.logout){ %>
                    <div class="alter alert-success text-center text-light">
                        <%= logout %>
                    </div>
             <% } %>
             <% if (typeof errorMessage !== 'undefined') { %>
                <div class="alert alert-danger text-center">
                    <%= errorMessage %>
                </div>
            <% } %>

            </div>

            <form action="/route/login" method="POST" class="pt-3">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="email" name="email" >
                    <small class="form-text text-light text">Register email address</small>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="password">
                </div>
                <button type="submit" class="btn btn-success mt-3 rounded-pill">Submit</button>
            </form>
        </div>

    </div>
    
    <%- include("footer") -%>